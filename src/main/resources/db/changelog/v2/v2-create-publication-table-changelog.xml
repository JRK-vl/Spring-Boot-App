<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v2-1" author="Valery Lazavitsky">
        <preConditions onFail="MARK_RAN">
            <not>
                <and>
                    <columnExists tableName="publication" columnName="title"/>
                    <columnExists tableName="publication" columnName="post_text"/>
                    <columnExists tableName="publication" columnName="author"/>
                </and>
            </not>
        </preConditions>
        <addColumn tableName="publication">
            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="publication">
            <column name="post_text" type="text">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="publication">
            <column name="author" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>